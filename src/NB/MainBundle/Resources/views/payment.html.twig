{% extends "::base.html.twig" %}

{% block title %}Informations clients | La première plateforme d'achat et de réservation de billet de bus {% endblock %}
{% block keywords %}
    voyage bus, bus voyage, billet de bus pas cher, bus mali, voyage car, bus pas cher mali, reservation bus, mali bus, billet de bus,
    billet bus, billet pas cher, prix billet, voyage mali, reservation nextBus, nextBus, reservation en ligne,
    plateforme de vente mali, plateforme de vente au mali, plateforme de vente de billet de bus, plateforme de vente
    de billet de bus au Mali, reserver, reserver mali, reserver au mali, achat de billet, billet mali,
    billet de bus mali, plateforme de reservation de billet de bus au Mali
{% endblock %}

{% block content %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">{{ reservation.voyages.axes.nom }} Le {{  reservation.doj |date('d M Y') }}</h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><a href="#">ACCUEIL</a></li>
                <li class="active">Informations clients</li>
            </ul>
        </div>
    </div>
    <section id="content">
        <div class="container">
            <div id="main">

                <div class="col-sm-8 col-md-9">
                    <div class="booking-section travelo-box">
                            <div class="person-information">
                                <h2>Dernière étape de votre réservation !</h2>
                            </div>
                        <form class="text-center " action="" method="POST">
                            <script async="" src="https://www.wecashup.cloud/live/2-form/js/MobileMoney.js"
                                    class="wecashup_button"
                                    data-receiver-uid="lywG2RnO5lZyWUczbiaEtO00Y1c2"
                                    data-receiver-public-key="q6Fs62Quar7BNIiNNlfmuwfx60y6hIcAjsjr9JhOFq1o"
                                    data-transaction-receiver-total-amount="{{ reservation.voyages.prix }}"
                                    data-transaction-receiver-currency="XOF"
                                    data-name="nextBus"
                                    data-transaction-receiver-reference="{{ reservation.tickets.ticketNo }}"
                                    data-transaction-sender-reference="{{ reservation.tickets.ticketNo }}"
                                    data-style="1" data-image="{{ absolute_url(asset('assets/images/logo2.png')) }}"
                                    data-cash="false"
                                    data-telecom="true"
                                    data-m-wallet="false"
                                    data-split="false" data-sender-lang="fr">
                            </script>
                        </form>

                     </div>


                </div>

                <div class="sidebar col-md-3">
                    <div class="booking-details travelo-box">
                        <h4>Détails </h4>
                        <article class="flight-booking-details">
                            <figure class="clearfix">
                                <a title="" href="#" class="middle-block"><img src="http://administration.next-bus.net/assets/images/uploads/compagnies/logo/{{ reservation.voyages.compagnie.logo }}" class="middle-item" alt=""></a>
                                <div class="travel-title">
                                    <h5 class="box-title">{{ reservation.voyages.axes.source.nom }} à {{ reservation.voyages.axes.destination.nom }}</h5>
                                </div>
                            </figure>
                            <div class="details">
                                <div class="constant-column-3 timing clearfix">
                                    <div class="check-in">
                                        <label>Départ</label>
                                        <span>{{ reservation.doj | date('d M Y') }}<br />{{ reservation.voyages.heureDepart | date('H:i') }} </span>
                                    </div>
                                    <div class="duration text-center">
                                        <i class="soap-icon-clock"></i>
                                        <span>{{ reservation.voyages.duree }}</span>
                                    </div>
                                    <div class="check-out">
                                        <label>Arrivée</label>
                                        <span>{{ reservation.doj | date('d M Y') }}<br />{{ reservation.voyages.heureArrivee | date('H:i') }}</span>
                                    </div>
                                </div>
                            </div>
                        </article>
                        <h4>Autres Details</h4>
                        <dl class="other-details">
                            <dt class="feature">Compagnie:</dt><dd class="value">{{ reservation.voyages.compagnie.nom }}</dd>
                            <dt class="feature">Type de bus:</dt><dd class="value">
                                {% if reservation.voyages.axes.typeBus == 1 %}
                                    Climatisé
                                {% else %}
                                    Ventilé
                                {% endif %}

                            </dd>
                            <dt class="feature">Tarif :</dt><dd class="value">{{ reservation.voyages.prix | number_format(0, '.', ',') }} FCFA</dd>
                        </dl>
                    </div>
                    <div class="travelo-box contact-box">
                        <h4>Besoin d'aide?</h4>
                        <p>Nous serons heureux de vous aider. Notre service client est à votre disposition 24/7 pour accompagner.</p>
                        <address class="contact-details">
                            <span class="contact-phone"><i class="soap-icon-phone"></i> 44-27-27-18-HELLO</span>
                            <br>
                            <a class="contact-email" href="#">aide@next-bus.net</a>
                        </address>
                    </div>
                    <div class="travelo-box book-with-us-box">
                        <h4>Pourquoi réserver avec nous ?</h4>
                        <ul>
                            <li>
                                <i class="soap-icon-hotel-1 circle"></i>
                                <h5 class="title"><a href="#">Facile & Simple</a></h5>
                                <p>Avec une ergonomie à la pointe de la technologie, nextBus vous permet
                                    d'avoir votre billet en seulement 3 clics.</p>
                            </li>
                            <li>
                                <i class="soap-icon-savings circle"></i>
                                <h5 class="title"><a href="#">+7500 Destinations</a></h5>
                                <p>Fort de son engagement à offrir le plus de choix au possible aux voyageurs,
                                    nextBus donne accès à plus 7500 destinations nationales et sous-régionales.</p>
                            </li>
                            <li>
                                <i class="soap-icon-support circle"></i>
                                <h5 class="title"><a href="#">Excellent Service Client</a></h5>
                                <p>Une équipe professionelle et dynamique à votre service 24/7 pour vous accompagner et
                                    vous aider.</p>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}


{% block scripts %}
    <script type="text/javascript">


    </script>
{% endblock %}